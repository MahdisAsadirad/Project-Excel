<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="10" style="-fx-padding: 10;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.controller.SpreadsheetGUIController">

    <MenuBar>
        <Menu text="File">
            <MenuItem onAction="#createNewSpreadsheet" text="New" />
            <SeparatorMenuItem />
            <MenuItem onAction="#exitApplication" text="Exit" />
        </Menu>
        <Menu text="Edit">
            <MenuItem onAction="#undo" text="Undo" />
            <MenuItem onAction="#redo" text="Redo" />
            <SeparatorMenuItem />
            <MenuItem onAction="#clearSelectedCell" text="Clear Selection" />
        </Menu>
        <Menu text="View">
            <MenuItem onAction="#refreshTable" text="Refresh" />
            <MenuItem onAction="#showStatistics" text="Show Statistics" />
        </Menu>
        <Menu text="Help">
            <MenuItem onAction="#showHelp" text="Show Help" />
            <SeparatorMenuItem />
            <MenuItem onAction="#showAbout" text="About" />
        </Menu>
    </MenuBar>

    <HBox alignment="CENTER_LEFT" spacing="10">
        <Label text="Command:" />
        <TextField fx:id="commandField" onAction="#executeCommand" prefWidth="400" />
        <Button fx:id="executeButton" onAction="#executeCommand" text="Execute" />
    </HBox>

    <HBox alignment="CENTER_LEFT" spacing="5">
        <Button fx:id="undoButton" onAction="#undo" text="Undo (Ctrl+Z)" />
        <Button fx:id="redoButton" onAction="#redo" text="Redo (Ctrl+Y)" />
        <Button fx:id="clearButton" onAction="#clearSelectedCell" text="Clear Cell" />
        <Region prefWidth="20" />
    </HBox>

    <TableView fx:id="spreadsheetTable" VBox.vgrow="ALWAYS">
        <columns>
        </columns>
    </TableView>

    <VBox spacing="5">
        <Label text="Output And Messages" />
        <TextArea fx:id="outputArea" editable="false" prefRowCount="8" style="-fx-font-family: monospace; -fx-background-color: #f0f0f0;" />
    </VBox>

</VBox>
